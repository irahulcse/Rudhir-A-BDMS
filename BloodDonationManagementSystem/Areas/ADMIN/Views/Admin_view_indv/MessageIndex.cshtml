@using PagedList.Mvc;
@model PagedList.IPagedList<BloodDonationManagementSystem.Message>

@{
    ViewBag.Title = "MessageIndex";
}

<h2>ALL REQUESTS</h2>
@using (Html.BeginForm("MessageIndex", "Admin_view_indv", FormMethod.Get))
{
    @Html.AntiForgeryToken()

    <h4>Choose Blood Group:-</h4>
    @Html.DropDownList("gp", new SelectList(ViewBag.gp), htmlAttributes: new { @class = "form-control" })
    <div class="form-group">
        <input type="submit" class="btn btn-default" value="SEARCH" />

    </div>
}

<p>

</p>
<table class="table table-striped table-bordered">
    <tr>
        <th>
            Name
        </th>
        <th>
            Valid Email
        </th>
        <th>
            State
        </th>

        <th>
            Mobile No
        </th>
        <th>
            Message
        </th>
        <th>
            Blood Group
        </th>
        <th>
            Organization Contacted
        </th>
        <th>
            Date Of Action
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PersonName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State.StateName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile_No)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.message1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Blood_Gp.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Org_details.org_name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.created_time)
            </td>
        </tr>
    }

</table>
<br />
@Html.PagedListPager(Model, page => Url.Action("MessageIndex", new { page }))