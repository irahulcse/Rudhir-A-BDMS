@using PagedList.Mvc;
@model PagedList.IPagedList<BloodDonationManagementSystem.Models.Blood_Count>

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="banner">
    <div class="inner">
        <header>
            <h1>This is Life Saver</h1>
            <p>We are here to help you 24*7 !<br />Feel Free to Contact.</p>
        </header>
        <a href="#main" class="button big scrolly">Blood Stocks</a>
    </div>
</section>

<div id="main">
    <section class="wrapper style2">
        <div class="inner">

            <div class="flex flex-2">
                <div class="" style="width:100%;">


                    <table class="table table-striped table-bordered">
                        <tr>
                            <th>
                                Blood Group
                            </th>
                            <th>
                                Stock of Blood
                            </th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Blood_Group
                                </td>
                                <td>
                                    <a href='@Url.Action("UserNeedBlood", "Home", new { gp=item.Blood_Group})' class="button">@item.Stock</a>

                                </td>
                            </tr>
                        }
                    </table>

                </div>

            </div>
        </div>
    </section>
</div>