@using PagedList.Mvc;
@model PagedList.IPagedList<BloodDonationManagementSystem.Models.Blood_Org>

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="banner">
    <div class="inner">
        <header>
            <h1>This is Life Saver</h1>
            <p>We are here to help you 24*7 !<br />Feel Free to Contact.</p>
        </header>
        <a href="#main" class="button big scrolly">Detail of Blood Sources</a>
    </div>
</section>

<div id="main">
    <section class="wrapper style1">
        <div class="inner">

            <div class="flex flex-2">
                <div class="" style="width:100%;">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Email Id
                                </th>
                                <th>
                                    Blood Group
                                </th>

                                <th>
                                    State
                                </th>
                                <th>Mobile No</th>
                                <th>
                                    Stock Of Required Blood Group
                                </th>
                                <th>
                                    Contact Organization
                                </th>
                            </tr>


                        </thead>


                        <tbody>
                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.Email
                                    </td>
                                    <td>
                                        @item.Blood_Group
                                    </td>
                                    <td>
                                        @item.state
                                    </td>
                                    <td>
                                        @item.Mobile
                                    </td>
                                    <td>
                                        @item.Stock
                                    </td>
                                    <td>
                                        @if (item.id == 0)
                                        {
                                            <text> <= Details Given</text>
                                        }
                                        else
                                        {
                                            <a href='@Url.Action("Create", "Messages", new { idx = item.id })' class="button">Contact</a>

                                        }
                                    </td>

                                </tr>

                            }
                        </tbody>
                    </table>
                    <br />
                    <h5>
                        <a href="~/Home/Count" class="button">Back</a>
                    </h5>
                </div>    
                </div>
            </div>
    </section>
</div>
<br />

<h5>@Html.PagedListPager(Model, page => Url.Action("UserNeedBlood", new { page }))</h5>


