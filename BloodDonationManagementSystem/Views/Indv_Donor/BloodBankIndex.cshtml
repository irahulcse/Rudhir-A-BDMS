@model IEnumerable<BloodDonationManagementSystem.BloodBank>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section id="banner">
    <div class="inner">
        <header>
            <h1>This is Life Saver</h1>
            <p>We are a online Source helping people a lot !<br />Good to see you here.</p>
        </header>
        <a href="#main" class="button big scrolly">BLOOD BANKS IN YOUR STATE</a>
    </div>
</section>

<div id="main">
    <section class="wrapper style1">
        <div class="inner">

            <div class="flex flex-2">
                <div class="" style="width:100%;">
                    <table class="table table-striped table-bordered">
                        <tr>

                            <th>
                                State
                            </th>
                            <th>
                                Blood Bank
                            </th>

                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.State.StateName)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>


                            </tr>
                        }

                    </table>
                    <br />
                    <h5>
                        <a href="~/Indv_Donor/Index" class="button">Back</a>
                    </h5>
                </div>
              
            </div>

        </div>
        

    </section>
    </div>
  