@model IEnumerable<BloodDonationManagementSystem.Individual_Donor>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div id="main">
    <section class="wrapper style2">
        <div class="inner">
            <div class="flex flex-2">
                <div class="" style="width:100%;">
                    <h4>You are perfect example for others!</h4>
                    <table class="table table-striped table-bordered">
                        <tr>
                            <th>
                                DonorName
                            </th>
                            <th>
                                DOB
                            </th>
                            <th>
                                PhoneNo
                            </th>
                            <th>
                                AadharCardNo
                            </th>

                            <th>
                                Email
                            </th>
                            <th>
                                Blood Group
                            </th>
                            <th>
                                Gender
                            </th>
                            <th>
                                State
                            </th>
                            <th>
                                UPDATE PROFILE

                            </th>
                            <th>
                                BLOOD BANKS
                            </th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DonorName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DOB)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PhoneNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AadharCardNo)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.AspNetUser.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Blood_Gp.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Gender.gender1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.State.StateName)
                                </td>
                                <td>
                                    @if (Model.Count() > 0)
                                    {
                                        <a href="~/Indv_Donor/Edit/@item.Id" class="button">EDIT</a>


                                    }

                                </td>
                                <td>
                                    @if (Model.Count() > 0)
                                    {
                                        <a href='@Url.Action("BloodBankIndex", "Indv_Donor", new { id=item.State.StateName})' class="button">IN @item.State.StateName</a>

                                    }
                                </td>
                            </tr>
                        }

                    </table>


                </div>
            </div>
        </div>
    </section>
    <section class="wrapper style1">
        <div class="inner">
            <header class="align-center">
                <h2>Donate blood, Donate smile!</h2>
                <p>Never lose the opportunity of blood donation as it always chose someone special.</p>
            </header>
            <div class="flex flex-3">
                <div class="col align-center">
                    <div class="image round fit" style="width:200px;height:200px;margin:0 auto 30px;">
                        <img src="~/images/pic03.jpg" alt="" style="width:100%;height:100%;" />
                    </div>
                    <p>Spare only 15 minutes and Save one life. </p>
                    <a href="#" class="button">Learn More</a>
                </div>
                <div class="col align-center">
                    <div class="image round fit" style="width:200px;height:200px;margin:0 auto 30px;">
                        <img src="~/images/pic05.jpg" alt="" style="width:100%;height:100%;" />
                    </div>
                    <p>Bring a life back to power. Make blood donation your responsibility. </p>
                    <a href="#" class="button">Learn More</a>
                </div>
                <div class="col align-center">
                    <div class="image round fit" style="width:200px;height:200px;margin:0 auto 30px;">
                        <img src="~/images/pic04.jpg" alt="" style="width:100%;height:100%;" />
                    </div>
                    <p>You are Rock Star of someone’s life, donate blood! </p>
                    <a href="#" class="button">Learn More</a>
                </div>
            </div>
        </div>
    </section>



</div>





