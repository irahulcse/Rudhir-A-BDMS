@model BloodDonationManagementSystem.Org_details

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
   
}
<section id="banner">
    <div class="inner">
        <header>
            <h1>Your Organization</h1>
            <p>Good to see you here,You are one of the groups which benifit Entire Society.</p>
        </header>
        <a href="#main" class="button big scrolly">Update Organization Profile</a>
    </div>
</section>

<div id="main">
    <section class="wrapper style1">
        <div class="inner">
            <!-- 2 Columns -->
            <div class="flex flex-2">
                <div class="" style="width:100%; max-width:500px; margin-left:300px; margin-right:200px; ">
                    @using (Html.BeginForm("Create", "Org_Details", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <h4>Organization Profile</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.org_name, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.org_name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.org_name, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.org_descp, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.org_descp, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.org_descp, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            @Html.HiddenFor(model => model.fk_id)


                            <div class="12u$">
                                @Html.LabelFor(model => model.fk_stateid, "State", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("fk_stateid", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.fk_stateid, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="12u$">
                                @Html.LabelFor(model => model.org_image, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input type="file" name="org_image" />
                                </div>
                            </div>
                            <br />
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Create" class="btn btn-default" id="btnUpload" />
                                </div>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
    </section>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
