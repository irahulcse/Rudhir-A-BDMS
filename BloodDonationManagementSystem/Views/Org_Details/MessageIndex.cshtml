@using PagedList.Mvc;
@model PagedList.IPagedList<BloodDonationManagementSystem.Message>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="main">
    <section class="wrapper style1">
        <div class="inner">
           
            <div class="flex flex-2">
                <div class="" style="width:100%;">

                    <h2>ALL REQUESTS</h2>


                    <table class="table table-striped table-bordered">
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Valid Email
                            </th>
                            <th>
                                State
                            </th>

                            <th>
                                Mobile No
                            </th>
                            <th>
                                Message
                            </th>
                            <th>
                                Blood Group
                            </th>
                            <th>
                                Organization Contacted
                            </th>

                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PersonName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.State.StateName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Mobile_No)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.message1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Blood_Gp.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Org_details.org_name)
                                </td>


                            </tr>
                        }

                    </table>
                    <br /><br />
                  @Html.PagedListPager(Model, page => Url.Action("MessageIndex", new { page }))

                </div>
            </div>
            </div>
    </section>
    </div>